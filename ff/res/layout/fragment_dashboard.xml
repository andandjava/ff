<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4eaee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Welcome Username"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/empcode_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Empolyee Code 0543"
            android:textSize="@dimen/small_size"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/leave_mng_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/lightgreen_border"
                android:padding="2dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/leave_mng_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/leave_management"
                    android:gravity="center_horizontal|center_horizontal"
                    android:text="@string/leave_mgmt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/big_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prd_mng_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/lightgreen_border"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/prd_mng_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/product_management"
                    android:gravity="center_horizontal|center_horizontal"
                    android:text="@string/prd_mgmt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/big_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/doc_mng_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/lightgreen_border"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/doc_mng_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/document_manager"
                    android:gravity="center_horizontal"
                    android:text="@string/doc_mgmt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/big_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hrd_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/lightgreen_border"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/hrd_mgmt_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/leave_management"
                    android:gravity="center_horizontal|center_horizontal"
                    android:text="@string/hrd"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/big_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:id="@+id/exp_mng_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/lightgreen_border"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/exp_mng_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/expense_management"
                    android:gravity="center_horizontal"
                    android:text="@string/exp_mgmt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/big_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/lightgreen_border"
                android:visibility="invisible" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/big_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>