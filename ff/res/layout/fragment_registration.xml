<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/name"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:background="@drawable/edttxt_border"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textGender"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.35"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/gender"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/editGender"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".65"
            android:background="@drawable/edttxt_border"
            android:drawableRight="@drawable/down_arrow"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:padding="10dp"
            android:text="@string/male"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textYou"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.35"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/youarea"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/choose_edt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".65"
            android:background="@drawable/edttxt_border"
            android:drawableRight="@drawable/down_arrow"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:padding="10dp"
            android:text="@string/emp"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/department_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textDepartment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.35"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/department"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/choose_dept_edt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".65"
            android:background="@drawable/edttxt_border"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textEmailId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/email"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@drawable/edttxt_border"
            android:ems="10"
            android:hint="@string/mailId"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.45"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/pwd"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/editPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:background="@drawable/edttxt_border"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textConPwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.45"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/con_pwd"
            android:textColor="@color/hash"
            android:textSize="@dimen/medium_size" />

        <EditText
            android:id="@+id/editConPwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.55"
            android:background="@drawable/edttxt_border"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/dark_hash"
            android:textSize="@dimen/medium_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:visibility="invisible" />

        <Button
            android:id="@+id/signup_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight=".3"
            android:background="@drawable/lightgreen_border"
            android:text="@string/update"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/big_size"
            android:textStyle="bold" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>