<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <include layout="@layout/header_include" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/status_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/status_value_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/ename_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/emp_name"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/ename_value_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/sub_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/subject"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/sub_val_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/applied_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/applied_date"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/applied_date_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/from_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/from"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/from_date_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/to_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/to"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/to_date_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/no_of_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/num_of_days"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/no_of_days_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/desc_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/description"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/desc_val_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/approved_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/approved_by"
                        android:textColor="@color/hash"
                        android:textSize="@dimen/medium_size" />

                    <TextView
                        android:id="@+id/approved_val_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/actionbar_bg"
                        android:textSize="@dimen/medium_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/accept_leave_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/lightgreen_border"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/accept"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/big_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reject_leave_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/lightgreen_border"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/reject"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/big_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>